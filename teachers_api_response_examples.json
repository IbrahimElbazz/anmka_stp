  "notes": {
    "image_urls": "All image paths (avatar, thumbnail, image) should be relative paths. The client will automatically prepend the base URL (https://stp.anmka.com) to create full URLs.",
    "localization": "Fields with '_en' suffix are English translations. The app uses Arabic as primary language.",
    "pagination": "When pagination is used, the response includes a 'meta' object with pagination information. If not paginated, 'data' can be a direct array.",
    "courses_in_teacher_details": "The 'courses' array in teacher details can be a simplified list or full course objects. The app handles both cases.",
    "required_fields": {
      "teacher_list_item": ["id", "name", "title", "avatar", "rating", "students", "courses_count"],
      "teacher_details": ["id", "name", "title", "avatar", "bio", "rating", "students", "courses"],
      "course_in_teacher": ["id", "title", "thumbnail", "duration", "students"]
    },
    "optional_fields": {
      "teacher": ["name_en", "title_en", "bio_en", "created_at", "updated_at"],
      "course": ["title_en", "image", "duration_hours", "rating", "price", "is_free", "category", "instructor"]
    }
