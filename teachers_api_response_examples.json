  "error_responses": {
    "teacher_not_found": {
      "success": false,
      "message": "Teacher not found",
      "error": "TEACHER_NOT_FOUND",
      "data": null
    },
    "unauthorized": {
      "success": false,
      "message": "Unauthorized. Please login.",
      "error": "UNAUTHORIZED",
      "data": null
    },
    "validation_error": {
      "success": false,
      "message": "Validation failed",
      "error": "VALIDATION_ERROR",
      "errors": {
        "page": ["The page must be a positive integer."],
        "per_page": ["The per page must be between 1 and 100."]
      },
      "data": null
